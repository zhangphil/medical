<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <View 
        android:id="@+id/complints_footer_line1"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.5dp"
        android:background="@color/title_gray"/>
    
    <ImageView 
	    android:id="@+id/complints_footer_step"
	    android:layout_width="wrap_content"
	    android:layout_height="80dp"
	    android:contentDescription="@null"
	    android:layout_marginLeft="40dp"
	    android:layout_below="@+id/complints_footer_line1"
	    android:src="@drawable/set_line_red"/>
	
	<ImageView 
	    android:id="@+id/item_complaints_step_point"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/set_icon_red"
	    android:layout_marginTop="30dp"
	    android:contentDescription="@null"
	    android:layout_marginLeft="32dp"/>
	
	<View 
        android:id="@+id/complints_footer_line2"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0.5dp"
        android:layout_below="@+id/complints_footer_step"
        android:background="@color/title_gray"/>
	
	<ImageView 
        android:id="@+id/complaints_header_line"
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        android:contentDescription="@null"
        android:layout_marginLeft="40dp"
        android:background="@drawable/set_complaints_short"
        android:layout_below="@+id/complints_footer_line2"/>
	
	<ImageView 
        android:id="@+id/complaints_footer_point1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/set_point"
        android:contentDescription="@null"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/complaints_header_line"
        android:layout_marginLeft="38.5dp"/>
	
	<ImageView 
        android:id="@+id/complaints_footer_point2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/set_point"
        android:contentDescription="@null"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/complaints_footer_point1"
        android:layout_marginLeft="38.5dp"/>
	
	<ImageView 
        android:id="@+id/complaints_footer_point3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/set_point"
        android:contentDescription="@null"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/complaints_footer_point2"
        android:layout_marginLeft="38.5dp"/>
	
	<ImageView 
        android:id="@+id/complaints_footer_point4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/set_point"
        android:contentDescription="@null"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/complaints_footer_point3"
        android:layout_marginLeft="38.5dp"/>
	
	<ImageView 
        android:id="@+id/complaints_footer_point5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/set_point"
        android:contentDescription="@null"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/complaints_footer_point4"
        android:layout_marginLeft="38.5dp"/>
	
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="20dp"
	    android:layout_below="@+id/complaints_footer_point5"/>

</RelativeLayout>

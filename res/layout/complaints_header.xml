<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <View 
        android:id="@+id/complaints_header_empty"
        android:layout_width="fill_parent"
        android:layout_height="10dp"/>
    
    <ImageView 
        android:id="@+id/complaints_header_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/set_point"
        android:contentDescription="@null"
        android:layout_below="@+id/complaints_header_empty"
        android:layout_marginLeft="38.5dp"/>
    
    <ImageView 
        android:id="@+id/complaints_header_line"
        android:layout_width="wrap_content"
        android:layout_height="6dp"
        android:contentDescription="@null"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/set_complaints_short"
        android:layout_below="@+id/complaints_header_points"/>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/title_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/complaints_header_line"/>

</RelativeLayout>

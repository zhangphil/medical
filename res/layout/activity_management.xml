<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height" >

        <ImageView
            android:id="@+id/management_img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/selector_btn_back" />

        <TextView
            style="@style/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/management" />
    </RelativeLayout>

    <View
        android:id="@+id/doctor_img_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_title"
        android:background="@color/title_gray" />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctor_img_line"
        android:orientation="vertical">
        
        <TextView
        android:id="@+id/management_btn_personal"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_management_green"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/personal_info_manage"
        android:textColor="@drawable/selector_btn_management_text_change"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/management_complaints_manage"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_management_green"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/complaints_manage"
        android:textColor="@drawable/selector_btn_management_text_change"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/management_change_password"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/selector_btn_management_green"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/change_password"
        android:textColor="@drawable/selector_btn_management_text_change"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/management_cancellation"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/cancellation"
        android:textColor="@color/white"
        android:background="@drawable/set_btn_cancellation"
        android:textSize="16sp" />

    </LinearLayout>

    
<!-- <RelativeLayout
        android:id="@+id/submit_msg_layout_menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent" 
        android:visibility="visible"> -->

        <LinearLayout
            android:id="@+id/management_layout_menu"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/photo_layout_bg"
            android:orientation="vertical"
            android:visibility="gone" >

            <Button
                android:id="@+id/management_btn_cancellation"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:background="@drawable/selector_btn_cancellation"
                android:text="@string/comfirm"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <Button
                android:id="@+id/management_btn_cancel"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:background="@drawable/selector_btn_cancel"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
<!--     </RelativeLayout> -->
</RelativeLayout>
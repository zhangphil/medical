<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Widget" />

    <!-- Base theme for the menu drawer. -->
    <style name="Widget.MenuDrawer">
        <item name="mdContentBackground">?android:attr/windowBackground</item>
    </style>
    
    <style name="MenuDrawer" />

    <style name="MenuDrawer.Widget" />
    
 
    <style name="MenuDrawerStyle" parent="Widget.MenuDrawer">
        <item name="mdActiveIndicator">@drawable/menu_arrow</item>
        <item name="mdMenuSize">250dp</item>
    </style>

    
    <style name="left_menu_item">
        <item name="android:drawablePadding">18dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/title_gray</item>
    </style>
    
    <style name="next">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">30dp</item>
    </style>
    
    <style name="survey_base_info_text">
        <item name="android:textColor">@color/title_gray</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/dialog_bg_noblack</item>
 <!-- 这样可以去除自定义对话框的黑色阴影 -->
    </style>
    
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/box_upload</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
